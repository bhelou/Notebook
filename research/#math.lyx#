\begin_layout Subsection
Trig
\end_layout

\begin_layout Enumerate

\emph on
Double angle cosine
\emph default
:
\begin_inset Formula 
\begin{eqnarray*}
\cos2\theta & = & \cos^{2}\theta-\sin^{2}\theta\\
 & = & 2\cos^{2}\theta-1\\
 & = & 1-2\sin^{2}\theta
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Enumerate

\emph on
Cosine sum formula
\emph default
 
\begin_inset FormulaMacro
\newcommand{\cosSum}[2]{\cos\left(#1\right)\cos\left(#2\right)-\sin\left(#1\right)\sin\left(#2\right)}
\end_inset

: 
\begin_inset Formula 
\begin{eqnarray*}
\cos\left(u+v\right) & = & \cosSum uv
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Enumerate

\emph on
Cosine difference formula
\emph default
 
\begin_inset FormulaMacro
\newcommand{\cosDiff}[2]{\cos\left(#1\right)\cos\left(#2\right)+\sin\left(#1\right)\sin\left(#2\right)}
\end_inset

:
\begin_inset Formula 
\begin{eqnarray*}
\cos\left(u-v\right) & = & \cosDiff uv
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Enumerate

\emph on
Sine difference formula
\emph default
 
\begin_inset FormulaMacro
\newcommand{\sinDiff}[2]{\sin\left(#1\right)\cos\left(#2\right)-\cos\left(#1\right)\sin\left(#2\right)}
\end_inset

:
\begin_inset Formula 
\begin{eqnarray*}
\sin\left(u-v\right) & = & \sinDiff uv
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Enumerate

\emph on
Cosine Sum to Product formula
\emph default
 
\begin_inset FormulaMacro
\newcommand{\cosStoP}[2]{2\cos\left(\frac{#1+#2}{2}\right)\cos\left(\frac{#1-#2}{2}\right)}
\end_inset

:
\begin_inset Formula 
\begin{eqnarray*}
\cos u+\cos v & = & \cosStoP uv
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Enumerate

\emph on
Cosine Diff to Product formula
\emph default
 
\begin_inset FormulaMacro
