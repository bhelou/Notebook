\begin{eqnarray*}
p_{n}\left(y_{n},t_{n};...;y_{1},t_{1}\right) & = & P_{n}\left(y_{n},t_{n}|y_{n-1},t_{n-1};...;y_{1},t_{1}\right)p_{n-1}\left(y_{n-1},t_{n-1};...;y_{1},t_{1}\right)
\end{eqnarray*}

\end_inset

]]
