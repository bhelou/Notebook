\begin_layout Section
Transforms
\end_layout

\begin_layout Subsection
Fourier Transform
\end_layout

\begin_layout Subsubsection
Complex Fourier transform
\end_layout

\begin_layout Standard
We have that 
\begin_inset Formula 
\begin{eqnarray*}
f\left(x\right) & = & \sum_{n=-\infty}^{\infty}A_{n}e^{i\left(2\pi nx/L\right)}\\
A_{n} & = & \frac{1}{L}\int_{-L/2}^{L/2}f\left(x\right)e^{-i\left(2\pi nx/L\right)}dx
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
(From 
\begin_inset CommandInset href
LatexCommand href
name "Fourier series wolfram alpha"
target "http://mathworld.wolfram.com/FourierSeries.html"

\end_inset

)
\end_layout

\begin_layout Section
Gaussian Integrals
\end_layout

\begin_layout Claim
Let 
\begin_inset Formula $\overleftrightarrow{A}$
\end_inset

 be a real symmetric positive-definite 
\begin_inset Formula $N\times N$
\end_inset

 matrix, 
\begin_inset Formula $\vec{x}=\left(\begin{array}{cccc}
x_{1} & x_{2} & \cdots & x_{N}\end{array}\right)^{T}$
\end_inset

- a variable vector, 
\begin_inset Formula $\vec{b}=\left(\begin{array}{cccc}
b_{1} & b_{2} & \cdots & b_{N}\end{array}\right)$
\end_inset

- a constant vector then 
\begin_inset Formula 
\begin{eqnarray}
\int d\vec{x}\exp\left[-\frac{1}{2}\vec{x}^{T}\overleftrightarrow{A}\vec{x}+\vec{b}^{T}\vec{x}\right] & = & \sqrt{\frac{\left(2\pi\right)^{N}}{\det\overleftrightarrow{A}}}\exp\left[\frac{1}{2}\vec{b}^{T}\overleftrightarrow{A^{-1}}\vec{b}\right],\label{eq:gaussian integral}\\
\nonumber 
\end{eqnarray}

\end_inset

where all integrals are taken over 
\begin_inset Formula $\left[-\infty,\infty\right]$
\end_inset

.
 *
\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
The proof is given in problem 1 a of Ph127c HW1 [[TODO: Write the proof]]
\end_layout

\end_inset

 
\end_layout

