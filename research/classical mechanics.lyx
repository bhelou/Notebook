\begin_inset Formula 
\begin{eqnarray*}
\partial_{\lambda}\xi & = & 4\gamma^{3}+8\lambda^{2}\gamma-4\omega_{0}^{2}\gamma\\
 & = & \gamma\left(4\gamma^{2}+4\left(2\lambda^{2}-\omega_{0}^{2}\right)\right)\\
 & = & 4\gamma\left(\gamma^{2}+\left(2\lambda^{2}-\omega_{0}^{2}\right)\right),
\end{eqnarray*}

\end_inset

