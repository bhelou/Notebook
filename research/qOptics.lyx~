\begin_layout Plain Layout
Another failed attempt
\end_layout

\begin_layout Plain Layout
We have for a general operator 
\begin_inset Formula $O$
\end_inset

 that (using operator expansion theorem 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:operatorExpansionTheorem"

\end_inset

) 
\begin_inset Formula 
\begin{eqnarray*}
\exp\left(i\hat{H}\tau/\hbar\right)\hat{O}\left(t\right)\exp\left(-i\hat{H}\tau/\hbar\right) & = & \hat{O}\left(t\right)+\frac{i\tau}{\hbar}\left[H,O\right]+\left(\frac{i\tau}{\hbar}\right)^{2}\frac{1}{2!}\left[H,\left[H,O\right]\right]+...\\
 & = & O\left(t\right)+\tau\frac{dO}{dt}+\frac{\tau^{2}}{2!}\frac{d^{2}O}{dt^{2}}+...\\
 & = & O\left(t+\tau\right)
\end{eqnarray*}

\end_inset

so if 
\begin_inset Formula $\frac{dO}{dt}=0$
\end_inset

 then 
\begin_inset Formula $O\left(t\right)=O\left(t+\tau\right)$
\end_inset

.
 Now,
\end_layout

\begin_layout Plain Layout
\begin_inset Formula 
\begin{eqnarray*}
\frac{d}{d\tau}\left[A_{1H}^{\left(0\right)}\left(t+\tau\right),\hat{A}_{2H}^{\left(0\right)}\left(t^{'}+\tau\right)\right] & = & \frac{d}{d\tau}\left[A_{1}A_{2}-A_{2}A_{1}\right]\\
 & = & \frac{d}{d\tau}\left[A_{1}A_{2}-A_{2}A_{1}\right]\\
 & = & A_{1}\dot{A}_{2}+\dot{A}_{1}A_{2}-\dot{A}_{2}A_{1}-A_{2}\dot{A}_{1}\\
 & \propto & U_{t}^{\dagger}\left[H,A_{1}\left(\tau\right)\right]U_{t}A_{2}+A_{1}U_{t^{'}}^{\dagger}\left[H,A_{2}\left(\tau\right)\right]U_{t^{'}}-U_{t^{'}}^{\dagger}\left[H,A_{2}\left(\tau\right)\right]U_{t^{'}}A_{1}-A_{2}U_{t}^{\dagger}\left[H,A_{1}\left(\tau\right)\right]U_{t}\\
 & = & \left[H,A_{1}\left(t+\tau\right)\right]A_{2}+A_{1}\left[H,A_{2}\left(t^{'}+\tau\right)\right]-\left[H,A_{2}\left(t^{'}+\tau\right)\right]A_{1}-A_{2}\left[H,A_{1}\left(t+\tau\right)\right]\\
 & = & -\left[A_{2}\left(t^{'}+\tau\right),\left[H,A_{1}\left(t+\tau\right)\right]\right]-\left[\left[H,A_{2}\left(t^{'}+\tau\right)\right],A_{1}\left(t+\tau\right)\right]\\
 & = & \left[A_{1}\left(t+\tau\right),\left[H,A_{2}\left(t^{'}+\tau\right)\right]\right]-\left[A_{2}\left(t^{'}+\tau\right),\left[H,A_{1}\left(t+\tau\right)\right]\right]\\
 & \equiv & \xi
\end{eqnarray*}

\end_inset

We ask what is 
\begin_inset Formula $\left[A_{2}\left(t^{'}+\tau\right),\left[H,A_{1}\left(t+\tau\right)\right]\right]=?$
\end_inset

 We have that 
\begin_inset Formula 
\begin{eqnarray*}
\left[H,A_{i}\left(t\right)\right] & = & \sum_{k}a_{k}^{i}\left[H,\hat{C}_{k}\left(t\right)\right]+\left[H,b_{i}\in\mathbb{C}\right]\\
 & = & \sum_{k}a_{k}^{i}U_{t}^{\dagger}\left[\sum_{ab}L_{2}^{ab}C_{a}C_{b}+\sum_{a}L_{1}^{a}C_{a}+L_{0},\hat{C}_{k}\right]U_{t}\\
 & = & \sum_{k}a_{k}^{i}U_{t}^{\dagger}\left(\sum_{ab}L_{2}^{ab}\left(C_{a}c_{bk}+C_{b}c_{ak}\right)+\sum_{a}L_{1}^{a}c_{ak}\right)U_{t}\\
 & = & \sum_{k}a_{k}^{i}\left(2\sum_{ab}L_{2}^{ab}C_{a}\left(t\right)c_{bk}+\sum_{a}L_{1}^{a}c_{ak}\right),
\end{eqnarray*}

\end_inset

because 
\begin_inset Formula $L^{ij}$
\end_inset

 is symmetric and where 
\begin_inset Formula $c_{k}=\left[C_{k},C_{\tilde{k}}\right]$
\end_inset

 with 
\begin_inset Formula $\tilde{k}$
\end_inset

 denoting the canonically conjugate operator to 
\begin_inset Formula $C_{k}$
\end_inset

 and so
\begin_inset Formula 
\begin{eqnarray*}
\left[A_{j}\left(t^{'}\right),\left[H,A_{i}\left(t\right)\right]\right] & = & \sum_{sk}a_{s}^{j}a_{k}^{i}\left[C_{s}\left(t^{'}\right),\left(2\sum_{ab}L_{2}^{ab}C_{a}\left(t\right)c_{bk}+\sum_{a}L_{1}^{a}c_{ak}\right)\right]\\
 & = & \sum_{sk}a_{s}^{j}a_{k}^{i}\left[U_{t^{'}}^{\dagger}C_{s}U_{t^{'}},U_{t}^{\dagger}\left(2\sum_{ab}L_{2}^{ab}C_{a}\left(t\right)c_{bk}+\sum_{a}L_{1}^{a}c_{ak}\right)U_{t}\right]\\
 & = & \sum_{sk}a_{s}^{j}a_{k}^{i}U_{t^{'}}^{\dagger}\left[C_{s},U_{t-t^{'}}^{\dagger}\left(2\sum_{ab}L_{2}^{ab}C_{a}\left(t\right)c_{bk}+\sum_{a}L_{1}^{a}c_{ak}\right)U_{t-t^{'}}\right]U_{t^{'}}\\
 & = & \sum_{sk}a_{s}^{j}a_{k}^{i}U_{t^{'}}^{\dagger}\left[C_{s},\left(2\sum_{mn}L_{2}^{mn}C_{m}\left(t-t^{'}\right)c_{nk}+\sum_{a}L_{1}^{a}c_{ak}\right)\right]U_{t^{'}}\\
 & = & \sum_{sk}a_{s}^{j}a_{k}^{i}U_{t^{'}}^{\dagger}\left(2\sum_{mn}c_{nk}L_{2}^{mn}\left[C_{s},C_{m}\left(t-t^{'}\right)\right]\right)U_{t^{'}}\\
 & \propto & \sum_{sk}a_{s}^{j}a_{k}^{i}U_{t^{'}}^{\dagger}\left(2\sum_{mn}c_{nk}L_{2}^{mn}\left[C_{s},\sum_{r}\alpha_{mr}\left(t-t^{'}\right)C_{r}+\beta_{l}\left(t-t^{'}\right)\right]\right)U_{t^{'}}\\
 & = & \sum_{sk}a_{s}^{j}a_{k}^{i}U_{t^{'}}^{\dagger}\left(2\sum_{mnr}\alpha_{mr}\left(t-t^{'}\right)L_{2}^{mn}c_{nk}\left[C_{s},C_{r}\right]\right)U_{t^{'}}\\
 & = & \sum_{sk}a_{s}^{j}a_{k}^{i}U_{t^{'}}^{\dagger}\left(2\sum_{mnr}\alpha_{mr}\left(t-t^{'}\right)L_{2}^{mn}c_{nk}c_{sr}\right)U_{t^{'}}\\
 & = & 2\sum_{skmnr}L_{2}^{mn}a_{s}^{j}a_{k}^{i}c_{nk}c_{sr}\alpha_{mr}\left(t-t^{'}\right)
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Plain Layout
and so 
\begin_inset Formula 
\begin{eqnarray*}
\left[A_{i}\left(t\right),\left[H,A_{j}\left(t^{'}\right)\right]\right] & = & 2\sum_{skmnr}L_{2}^{mn}a_{s}^{i}a_{k}^{j}c_{nk}c_{sr}\alpha_{mr}\left(t^{'}-t\right)\\
 & = & 2\sum_{skmnr}L_{2}^{mn}a_{s}^{j}a_{k}^{i}c_{ns}c_{kr}\alpha_{mr}\left(t^{'}-t\right)\\
 & = & 2\sum_{skmnr}L_{2}^{mn}a_{s}^{j}a_{k}^{i}c_{sn}c_{rk}\alpha_{mr}\left(t^{'}-t\right)\\
 & = & 2\sum_{skmnr}L_{2}^{mr}a_{s}^{j}a_{k}^{i}c_{nk}c_{sr}\alpha_{mn}\left(t^{'}-t\right)\\
 & = & 2\sum_{sk}a_{s}^{j}a_{k}^{i}\sum_{mnr}c_{nk}c_{sr}L_{2}^{mr}\alpha_{mn}\left(t^{'}-t\right)
\end{eqnarray*}

\end_inset

We now ask, is 
\begin_inset Formula $\alpha_{l\tilde{s}}\left(t-t^{'}\right)=\alpha_{l\tilde{s}}\left(t^{'}-t\right)$
\end_inset

?
\end_layout

\begin_layout Plain Layout
Now, 
\begin_inset Formula 
\begin{eqnarray*}
\alpha_{ij}\left(t\right) & \propto & \frac{dC_{i}\left(t\right)}{dC_{j}}\\
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Plain Layout
\begin_inset Formula 
\begin{eqnarray*}
\dot{C_{l}\left(t\right)}\propto\left[H,C_{l}\left(t\right)\right] & = & U_{t}^{\dagger}\left[\sum_{ab}L_{2}^{ab}C_{a}C_{b}+\sum_{a}L_{1}^{a}C_{a}+L_{0},\hat{C}_{l}\right]U_{t}\\
 & = & c_{l}U_{t}^{\dagger}\frac{d\left(\sum_{ab}L_{2}^{ab}C_{a}C_{b}+\sum_{a}L_{1}^{a}C_{a}+L_{0}\right)}{dC_{l}}U_{t}\\
 & = & c_{l}\left(2\sum_{r}L_{2}^{lr}C_{r}\left(t\right)+L_{1}^{r}\right),
\end{eqnarray*}

\end_inset


\end_layout

\end_inset

: 
\begin_inset Formula 
\begin{eqnarray*}
C_{A_{1}A_{2}}\left(t,t^{'}\right) & = & \left[U_{0}^{\dagger}\left(t_{0},t\right)A_{1H}^{\left(0\right)}\left(0\right)U_{0}\left(t_{0},t\right),U_{0}^{\dagger}\left(t_{0},t^{'}\right)\hat{A}_{2H}^{\left(0\right)}\left(0\right)U_{0}\left(t_{0},t^{'}\right)\right]\\
 & = & \left[U_{0}^{\dagger}\left(t-t_{0}\right)A_{1H}^{\left(0\right)}\left(0\right)U_{0}\left(t-t_{0}\right),U_{0}^{\dagger}\left(t^{'}-t_{0}\right)\hat{A}_{2H}^{\left(0\right)}\left(0\right)U_{0}\left(t^{'}-t_{0}\right)\right]\\
 & = & U_{0}^{\dagger}\left(\xi\right)\left[U_{0}\left(\xi\right)U_{0}^{\dagger}\left(t-t_{0}\right)A_{1H}^{\left(0\right)}\left(0\right)U_{0}\left(t-t_{0}\right)U_{0}^{\dagger}\left(\xi\right),U_{0}\left(\xi\right)U_{0}^{\dagger}\left(t^{'}-t_{0}\right)\hat{A}_{2H}^{\left(0\right)}\left(0\right)U_{0}\left(t^{'}-t_{0}\right)U_{0}^{\dagger}\left(\xi\right)\right]U_{0}\left(\xi\right)\\
 & = & U_{0}^{\dagger}\left(\xi\right)\left[U_{0}\left(\xi-\left(t-t_{0}\right)\right)A_{1H}^{\left(0\right)}\left(0\right)U_{0}\left(t-t_{0}-\xi\right),U_{0}\left(\xi-\left(t^{'}-t_{0}\right)\right)\hat{A}_{2H}^{\left(0\right)}\left(0\right)U_{0}\left(t^{'}-t_{0}-\xi\right)\right]U_{0}\left(\xi\right)
\end{eqnarray*}

\end_inset

Picking 
\begin_inset Formula $\xi=t-t_{0}$
\end_inset

, we obtain 
\begin_inset Formula 
\begin{eqnarray*}
C & = & U_{0}^{\dagger}\left(t-t_{0}\right)\left[A_{1H}^{\left(0\right)}\left(0\right),U_{0}^{\dagger}\left(t^{'}-t\right)\hat{A}_{2H}^{\left(0\right)}\left(0\right)U_{0}\left(t^{'}-t\right)\right]U_{0}\left(t-t_{0}\right)\\
\end{eqnarray*}

\end_inset

but 
\begin_inset Formula $\left[A_{1H}^{\left(0\right)}\left(0\right),U_{0}^{\dagger}\left(t^{'}-t\right)\hat{A}_{2H}^{\left(0\right)}\left(0\right)U_{0}\left(t^{'}-t\right)\right]$
\end_inset

 is a c-number because 
\begin_inset Formula $A_{1}$
\end_inset

 and 
\begin_inset Formula $A_{2}$
\end_inset

 are linear operators (see sec.
 
\begin_inset CommandInset ref
LatexCommand ref
reference "sub:LinearClassical"

\end_inset

) and so it commutes with 
\begin_inset Formula $U$
\end_inset

 and we have that 
\begin_inset Formula 
\begin{eqnarray*}
C & = & \left[A_{1H}^{\left(0\right)}\left(0\right),U_{0}^{\dagger}\left(t^{'}-t\right)\hat{A}_{2H}^{\left(0\right)}\left(0\right)U_{0}\left(t^{'}-t\right)\right]\\
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Plain Layout
Now, secondly 
\begin_inset Formula 
\begin{eqnarray*}
\hat{A}_{H}\left(\Omega\right) & = & \intop_{-\infty}^{\infty}\left(\hat{A}_{H}^{\left(0\right)}\left(t\right)+\frac{i}{\hbar}\intop_{-\infty}^{t}dt^{'}C_{Ax}\left(t,t^{'}\right)\hat{F}_{H}\left(t^{'}\right)\right)e^{i\Omega t}dt\\
 & = & \hat{A}_{H}^{\left(0\right)}\left(\Omega\right)+\frac{i}{\hbar}\intop_{-\infty}^{\infty}\intop_{-\infty}^{t}\hat{F}_{H}\left(t^{'}\right)C_{Ax}\left(0,t^{'}-t\right)e^{i\Omega t}dt^{'}dt\\
 & = & \hat{A}_{H}^{\left(0\right)}\left(\Omega\right)+\frac{i}{\hbar}\intop_{-\infty}^{\infty}\intop_{-\infty}^{t}\hat{F}_{H}\left(t^{'}\right)e^{i\Omega t^{'}}C_{Ax}\left(t^{'}-t\right)e^{i\Omega\left(t-t^{'}\right)}dt^{'}dt\\
 & = & \hat{A}_{H}^{\left(0\right)}\left(\Omega\right)+\frac{i}{\hbar}\intop_{-\infty}^{\infty}\intop_{-\infty}^{0}\hat{F}_{H}\left(t+\tau\right)e^{i\Omega\left(t+\tau\right)}C_{Ax}\left(\tau\right)e^{-i\Omega\left(\tau\right)}d\tau dt\\
 & = & \hat{A}_{H}^{\left(0\right)}\left(\Omega\right)+\frac{i}{\hbar}\intop_{-\infty}^{\infty}\intop_{-\infty}^{0}\hat{F}_{H}\left(s\right)e^{i\Omega\left(s\right)}C_{Ax}\left(\tau\right)e^{-i\Omega\left(\tau\right)}d\tau ds\\
 & = & \hat{A}_{H}^{\left(0\right)}\left(\Omega\right)+\frac{i}{\hbar}\intop_{-\infty}^{\infty}\hat{F}_{H}\left(s\right)e^{i\Omega\left(s\right)}ds\intop_{-\infty}^{0}C_{Ax}\left(\tau\right)e^{-i\Omega\left(\tau\right)}d\tau
\end{eqnarray*}

\end_inset


\end_layout

\end_inset

.
 In addition, we have that 
\begin_inset Formula 
\begin{eqnarray}
R_{AB}^{*}\left(\Omega\right) & = & R_{AB}\left(-\Omega\right)\label{eq:conditiononR}\\
\nonumber 
\end{eqnarray}

\end_inset

*
\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
\begin_inset Formula 
\begin{eqnarray*}
-\frac{i}{\hbar}\intop_{0}^{\infty}d\tau e^{-i\Omega\tau}C_{AB}^{*}\left(0,-\tau\right) & = & ?\\
\end{eqnarray*}

\end_inset


\begin_inset Formula 
\begin{eqnarray*}
C_{AB}^{\dagger}\left(0,-\tau\right) & = & \left[A_{H}^{\left(0\right)}\left(0\right),\hat{B}_{H}^{\left(0\right)}\left(-\tau\right)\right]^{\dagger}\\
 & = & B^{\dagger}A^{\dagger}-A^{\dagger}B^{\dagger}=BA-AB=-C_{AB}
\end{eqnarray*}

\end_inset

and so 
\begin_inset Formula 
\begin{eqnarray*}
R_{AB}^{*}\left(\Omega\right) & = & \frac{i}{\hbar}\intop_{0}^{\infty}d\tau e^{-i\Omega\tau}C_{AB}\left(0,-\tau\right)\\
\end{eqnarray*}

\end_inset


\end_layout

\end_inset

 and we have that 
\begin_inset Formula 
\begin{eqnarray}
\left[\hat{A}_{H}^{\left(0\right)}\left(\Omega_{1}\right),\hat{B}_{H}^{\left(0\right)}\left(\Omega_{2}\right)\right] & = & -2\pi i\hbar\delta\left(\Omega_{1}+\Omega_{2}\right)\left[R_{AB}\left(\Omega_{1}\right)-R_{BA}\left(\Omega_{2}\right)\right]\label{eq:commutationFrequency}\\
\nonumber 
\end{eqnarray}

\end_inset

*
\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
\begin_inset Formula 
\begin{eqnarray*}
\intop dt_{1}\intop dt_{2}\left[\hat{A}_{H}^{\left(0\right)}\left(t_{1}\right),\hat{B}_{H}^{\left(0\right)}\left(t_{2}\right)\right]e^{i\Omega_{1}t_{1}}e^{i\Omega_{2}t_{2}} & = & \intop_{t_{1}>t_{2}}dt_{1}\intop dt_{2}\left[\hat{A}_{H}^{\left(0\right)}\left(t_{1}\right),\hat{B}_{H}^{\left(0\right)}\left(t_{2}\right)\right]e^{i\Omega_{1}t_{1}}e^{i\Omega_{2}t_{2}}+\intop dt_{1}\intop_{t_{2}>t_{1}}dt_{2}\left[\hat{A}_{H}^{\left(0\right)}\left(t_{1}\right),\hat{B}_{H}^{\left(0\right)}\left(t_{2}\right)\right]e^{i\Omega_{1}t_{1}}e^{i\Omega_{2}t_{2}}\\
 & = & \intop_{-\infty}^{\infty}dt_{2}\intop_{0}^{\infty}d\tau C_{AB}\left(t_{2}+\tau,t_{2}\right)e^{i\Omega_{1}\left(t_{2}+\tau\right)}e^{i\Omega_{2}t_{2}}+\intop_{-\infty}^{\infty}dt_{1}\intop_{0}^{-\infty}d\tau C_{AB}\left(t_{1},\tau+t_{1}\right)e^{i\Omega_{1}t_{1}}e^{i\Omega_{2}\left(t_{1}+\tau\right)}\\
 & = & \left(-i\hbar\right)\intop_{-\infty}^{\infty}dse^{i\left(\Omega_{1}+\Omega_{2}\right)s}\left(\frac{i}{\hbar}\right)\left(\intop_{0}^{\infty}d\tau C_{AB}\left(\tau,0\right)e^{i\Omega_{1}\tau}+\intop_{0}^{\infty}d\tau C_{AB}\left(0,\tau\right)e^{i\Omega_{2}\tau}\right)\\
 & = & -2\pi i\hbar\delta\left(\Omega_{1}+\Omega_{2}\right)\left(\left(\frac{i}{\hbar}\right)\left(\intop_{0}^{\infty}d\tau C_{AB}\left(-\tau\right)e^{i\Omega_{1}\tau}+\intop_{0}^{\infty}d\tau C_{AB}\left(-\tau\right)e^{i\Omega_{2}\tau}\right)\right)\\
 & = & -2\pi i\hbar\delta\left(\Omega_{1}+\Omega_{2}\right)\left(\left(\frac{i}{\hbar}\right)\left(\intop_{0}^{\infty}d\tau C_{AB}\left(-\tau\right)e^{i\Omega_{1}\tau}-\intop_{0}^{\infty}d\tau C_{BA}\left(-\tau\right)e^{i\Omega_{2}\tau}\right)\right)\\
\end{eqnarray*}

\end_inset

because we have that 
\begin_inset Formula 
\begin{eqnarray*}
C_{BA}\left(t,t^{'}\right) & = & -\left[\hat{A}_{H}^{\left(0\right)}\left(t^{'}\right),\hat{B}_{H}^{\left(0\right)}\left(t\right)\right]\\
 & = & -C_{AB}\left(t^{'},t\right)
\end{eqnarray*}

\end_inset


\end_layout

\end_inset


\end_layout

\begin_layout Standard
(From 
\begin_inset CommandInset citation
LatexCommand cite
key "Buonanno2002"

\end_inset

 appendix)
\end_layout

\begin_layout Section
Quantum Measurements
\end_layout

\begin_layout Standard

\emph on
Introduction
\emph default
: 
\end_layout

\begin_layout Standard
\begin_inset Quotes eld
\end_inset

In the standard, textbook treatment of quantum mechanics, the contact with
 experiment is described in terms of probabilities for obtaining this, that,
 or another result, when identical experiments are performed on a huge number
 (ensemble) of identical objects.
 Such an ensemble description was adequate during the first half century
 of quantum theory, because the technology of that era was incapable of
 making a measurement without destroying or severely changing the measured
 object (photon, atom, ...)¦ In recent years, however, advances in technology
 and technique have made possible repetitive quantum measurements on a single
 quantum object, with each measurement influencing the object only minimally.
 Such measurements cannot be analyzed using solely the ensemble theory.
 
\begin_inset Quotes eld
\end_inset

 (
\begin_inset CommandInset citation
LatexCommand cite
key "BraginskyQM"

\end_inset

 section I)
\end_layout

\begin_layout Subsection
General Conditions defining a measurement system
\end_layout

\begin_layout Standard
\begin_inset Quotes eld
\end_inset

Following Braginsky and Khalili 
\begin_inset CommandInset citation
LatexCommand cite
key "BraginskyQM"

\end_inset

, we deﬁne a measurement process as a transformation from some original
 classical observable which is unknown, e.g., the gravitational-wave amplitude,
 into another classical observable which is known, e.g., the data stored in
 the computer.
 Generally, the system which implements this process is composed of a probe
 
\begin_inset Formula $\mathcal{P}$
\end_inset

, which is directly coupled to the classical observable to be measured (for
 interferometers this is the antisymmetric mode of motion of the four arm-cavity
 mirrors), and the detector 
\begin_inset Formula $\mathcal{D}$
\end_inset

, which couples to the probe and produces the output observable (for interferome
ters this is the optical system and the photodetector).
 When quantum-mechanical effects are signiﬁcant in the behaviors of the
 probe and the detector, the overall device is called a quantum-measurement
 device.
 The output observable 
\begin_inset Formula $\hat{Z}=\mathcal{S}+\tilde{\mathcal{Q}}$
\end_inset

 contains a classical part 
\begin_inset Formula $\mathcal{S}$
\end_inset

, which depends on the classical observable 
\begin_inset Formula $G$
\end_inset

 to be measured, and some quantum noise 
\begin_inset Formula $\tilde{\mathcal{Q}}$
\end_inset

 due to the probe, the detector and their mutual interaction.
\begin_inset Quotes erd
\end_inset


\end_layout

\begin_layout Standard
(From 
\begin_inset CommandInset citation
LatexCommand cite
key "Buonanno2002"

\end_inset

 section II.A.)
\end_layout

\begin_layout Subsubsection
\begin_inset CommandInset label
LatexCommand label
name "sub:Condition-of-simultaneous-measurability"

\end_inset

QND measurements: Condition of simultaneous measurability
\end_layout

\begin_layout Standard
\begin_inset Quotes eld
\end_inset

According to the statistical interpertation of quantum mechanics, the output
 of a quantum-measurement process at different times is simultaneously measurabl
e
\begin_inset Quotes erd
\end_inset

 and one sufficient condition is that the Heisenberg operators of the output
 observable, 
\begin_inset Formula $\hat{Z}\left(t\right)$
\end_inset

, satisfy 
\begin_inset Formula 
\begin{eqnarray}
\left[\hat{Z}\left(t_{1}\right),\hat{Z}\left(t_{2}\right)\right] & = & 0\quad\forall t_{1},t_{2}\label{eq:simultaneous measurability condition}\\
\nonumber 
\end{eqnarray}

\end_inset

(Originally introduced as the definition of QND observables).
 This is equivalent to requiring that if the the quantum-measurement device
 (QMD) is coupled to an external system then the back action on the QMD
 does not alter the evolution of the output observable 
\begin_inset Formula $\hat{Z}$
\end_inset

, i.e.
 it does not respond to external perturbations directly coupled to it (proof
 given in 
\begin_inset CommandInset citation
LatexCommand cite
key "Buonanno2002"

\end_inset

 section II.A
\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
I interperted the proof of necessity as if 
\begin_inset Formula $\left[Z\left(t_{1}\right),Z\left(t_{2}\right)\right]=0$
\end_inset

 then the system is unaffected by a coupling to an external system.
 Moreover, I interperted the proof of sufficiency as saying if the system
 is unaffected by a coupling to an external system then we must have 
\begin_inset Formula $\left[Z\left(t_{1}\right),Z\left(t_{2}\right)\right]=0$
\end_inset

.
\end_layout

\end_inset

).
 I.e.
 any external coupling to the measurement system through 
\begin_inset Formula $\hat{Z}$
\end_inset

 should not change the evolution of 
\begin_inset Formula $\hat{Z}$
\end_inset

 itself.
 (From 
\begin_inset CommandInset citation
LatexCommand cite
key "Buonanno2002"

\end_inset

 section II.A.)
\begin_inset Newline newline
\end_inset


\begin_inset Quotes eld
\end_inset

This condition also guarantees that no other quantum noise is necessarily
 introduced into the measurement result once further manipulations are performed
 on the output.
\begin_inset Quotes erd
\end_inset

 (Appendix of 
\begin_inset CommandInset citation
LatexCommand cite
key "Buonanno2002"

\end_inset

)
\end_layout

\begin_layout Standard
Stated more formally, the above statements are embodied in the 
\series bold
\emph on
Simultaneous-Measurability – Zero-Response Relation
\series default
\emph default
:
\begin_inset Newline newline
\end_inset

For a Quantum Measurement Device (QMD), the simultaneous measurability condition
 for the output 
\begin_inset Formula $Z(t)$
\end_inset

, is equivalent to requiring that if the device is coupled to an external
 system via an interaction Hamiltonian of the form 
\begin_inset Formula $V(\hat{Z},\hat{\mathcal{E}})$
\end_inset

 where 
\begin_inset Formula $V$
\end_inset

 is an arbitrary function and 
\begin_inset Formula $\hat{\mathcal{E}}$
\end_inset

 belongs to the external system, then the back action on the QMD does 
\bar under
not
\bar default
 alter the evolution of the output observable 
\begin_inset Formula $\hat{Z}$
\end_inset

.
 *
\begin_inset Note Note
status collapsed

\begin_layout Plain Layout

\emph on
Proof of necessity
\emph default
:
\end_layout

\begin_layout Plain Layout
Write down the total Hamiltonian:
\begin_inset Formula 
\begin{eqnarray*}
\hat{H} & = & \left(H_{QMD}+H_{ext}\right)+V\\
 & \equiv & H^{\left(0\right)}+V
\end{eqnarray*}

\end_inset

Treating 
\begin_inset Formula $H^{0}$
\end_inset

 as the zeroth order hamiltonian, we obtain that -using Eq.
 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:perturbativeApproachDynamics"

\end_inset

- that (with 
\begin_inset Formula $A\equiv Z$
\end_inset

 and 
\begin_inset Formula $V_{I}\equiv V$
\end_inset

) 
\begin_inset Formula 
\begin{eqnarray*}
\hat{A}_{H}\left(t\right) & = & \hat{U}_{I}^{\dagger}\left(-\infty,t\right)\hat{A}_{H}^{\left(0\right)}\left(t\right)\hat{U}_{I}\left(-\infty,t\right)\\
 & = & \hat{A}_{H}^{\left(0\right)}\left(t\right)+\frac{i}{\hbar}\int_{-\infty}^{t}dt_{1}\left[\hat{V}_{I}\left(t_{1}\right),\hat{A}_{H}^{\left(0\right)}\left(t\right)\right]+\left(\frac{i}{\hbar}\right)^{2}\int_{-\infty}^{t}dt_{1}\int_{-\infty}^{t_{1}}dt_{2}\left[\hat{V}_{I}\left(t_{2}\right),\left[\hat{V}_{I}\left(t_{1}\right),\hat{A}_{H}^{\left(0\right)}\left(t\right)\right]\right]+...\\
 &  & +\left(\frac{i}{\hbar}\right)^{n}\int_{-\infty}^{t}dt_{1}\int_{-\infty}^{t_{1}}dt_{2}\ldots\int_{-\infty}^{t_{n-1}}dt_{n}\left[\hat{V}_{I}\left(t_{n}\right),\left[\ldots,\left[\hat{V}_{I}\left(t_{2}\right),\left[\hat{V}_{I}\left(t_{1}\right),\hat{A}_{H}^{\left(0\right)}\left(t\right)\right]\right]\ldots\right]\right]+...
\end{eqnarray*}

\end_inset

but we have that 
\begin_inset Formula $\left[Z\left(t_{2}\right),Z\left(t_{1}\right)\right]=0$
\end_inset

 by assumption and 
\begin_inset Formula $\left[\mathcal{E}\left(t_{2}\right),Z\left(t_{1}\right)\right]=0$
\end_inset

 because they belong to 2 different Hilbert spaces.
 And so 
\begin_inset Formula $\left[\hat{V}_{I}\left(t_{1}\right),\hat{A}_{H}^{\left(0\right)}\left(t\right)\right]=0$
\end_inset

 
\begin_inset Formula $\forall t_{1},t$
\end_inset

 and hence 
\begin_inset Formula $Z_{H}\left(t\right)=Z_{H}^{\left(0\right)}\left(t\right)$
\end_inset

.
\end_layout

\begin_layout Plain Layout

\emph on
Proof of sufficency
\emph default
:
\end_layout

\begin_layout Plain Layout
Assume that the evolution of 
\begin_inset Formula $Z$
\end_inset

 is unaffected by its coupling to any external system.
 Hence, this statement must hold for a particular form of 
\begin_inset Formula $V$
\end_inset

, say 
\begin_inset Formula $V=-\alpha Z\mathcal{E}$
\end_inset

 where 
\begin_inset Formula $0<\alpha\leq1$
\end_inset

 and 
\begin_inset Formula $\mathcal{E}$
\end_inset

 is classical.
 
\end_layout

\begin_layout Plain Layout
Use again that in general 
\begin_inset Formula 
\begin{eqnarray*}
\hat{A}_{H}\left(t\right) & = & \hat{U}_{I}^{\dagger}\left(-\infty,t\right)\hat{A}_{H}^{\left(0\right)}\left(t\right)\hat{U}_{I}\left(-\infty,t\right)\\
 & = & \hat{A}_{H}^{\left(0\right)}\left(t\right)+\frac{i}{\hbar}\int_{-\infty}^{t}dt_{1}\left[\hat{V}_{I}\left(t_{1}\right),\hat{A}_{H}^{\left(0\right)}\left(t\right)\right]+\left(\frac{i}{\hbar}\right)^{2}\int_{-\infty}^{t}dt_{1}\int_{-\infty}^{t_{1}}dt_{2}\left[\hat{V}_{I}\left(t_{2}\right),\left[\hat{V}_{I}\left(t_{1}\right),\hat{A}_{H}^{\left(0\right)}\left(t\right)\right]\right]+...\\
 &  & +\left(\frac{i}{\hbar}\right)^{n}\int_{-\infty}^{t}dt_{1}\int_{-\infty}^{t_{1}}dt_{2}\ldots\int_{-\infty}^{t_{n-1}}dt_{n}\left[\hat{V}_{I}\left(t_{n}\right),\left[\ldots,\left[\hat{V}_{I}\left(t_{2}\right),\left[\hat{V}_{I}\left(t_{1}\right),\hat{A}_{H}^{\left(0\right)}\left(t\right)\right]\right]\ldots\right]\right]+...
\end{eqnarray*}

\end_inset

which can be written:
\begin_inset Formula 
\begin{eqnarray*}
Z_{H}\left(t\right) & = & Z_{H}^{0}\left(t\right)-\alpha\frac{i}{\hbar}\int_{-\infty}^{t}dt_{1}\left[Z^{0}\left(t_{1}\right),Z^{0}\left(t\right)\right]\mathcal{E}\left(t_{1}\right)+O\left(\alpha^{2}\right)\\
\end{eqnarray*}

\end_inset

By assumption 
\begin_inset Formula $Z_{H}=Z^{0}$
\end_inset

 for all values of 
\begin_inset Formula $\alpha$
\end_inset

 and so using the uniqueness of the taylor series (http://www.math.wpi.edu/Course_M
aterials/MA1023C00/tayseries/node1.html) all higher order terms must vanish
 separately including the first order term and so 
\begin_inset Formula $\int_{-\infty}^{t}dt_{1}\left[Z^{0}\left(t_{1}\right),Z^{0}\left(t\right)\right]\mathcal{E}\left(t_{1}\right)=0\quad\forall t$
\end_inset

 and so 
\begin_inset Formula $\left[Z^{0}\left(t_{1}\right),Z^{0}\left(t\right)\right]=0\quad\forall t_{1},t$
\end_inset

.
\end_layout

\end_inset

^
\begin_inset Note Comment
status collapsed

\begin_layout Plain Layout
Note that this statement can be directly demonstrated for a linear system
 - see LQM conditions 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:LQM"

\end_inset


\end_layout

\end_inset


\end_layout

\begin_layout Standard
(From section 3.2.1 of 
\begin_inset CommandInset citation
LatexCommand cite
key "yanbeiThesis"

\end_inset

).
\end_layout

\begin_layout Subsection
Example of a linear optical position measurement
\end_layout

\begin_layout Standard
\begin_inset Float figure
wide false
sideways false
status collapsed

\begin_layout Plain Layout
\begin_inset Graphics
	filename exampleLinearOpticalPositionMeasurement.png
	scale 40

\end_inset


\begin_inset Caption

\begin_layout Plain Layout
\begin_inset CommandInset label
LatexCommand label
name "fig:ToyExampleLinearOpticalMeasurement"

\end_inset

From 
\begin_inset CommandInset citation
LatexCommand cite
key "Danilishin2012"

\end_inset


\end_layout

\end_inset


\end_layout

\end_inset


\end_layout

\begin_layout Standard
The setup of the measurement is shown in Fig.
 
\begin_inset CommandInset ref
LatexCommand ref
reference "fig:ToyExampleLinearOpticalMeasurement"

\end_inset

.
 
\begin_inset Formula $F$
\end_inset

 is the number of times the pulse reflects from the test mass 
\begin_inset Formula $M$
\end_inset

.
 We assume that the mirror from which the pulses reflect off of has a mass
 that is large enough to neglect the effect of the pulses' radiation pressure
 on its position.
 The position 
\begin_inset Formula $x$
\end_inset

 of 
\begin_inset Formula $M$
\end_inset

 is measured periodically with time interval 
\begin_inset Formula $\vartheta$
\end_inset

.
 The initial (random) phase 
\begin_inset Formula $\hat{\phi}_{j}$
\end_inset

 of pulse 
\begin_inset Formula $j$
\end_inset

 (assume that 
\begin_inset Formula $\left\langle \hat{\phi}_{j}\right\rangle =0$
\end_inset

), where 
\begin_inset Formula $j\in\mathbb{Z}$
\end_inset

 is the pulse number, is modified as the pulse reflects off the mirror:
\begin_inset Formula 
\begin{eqnarray}
\hat{\phi}_{j}^{r} & = & \hat{\phi}_{j}-2Fk_{p}\hat{x},\label{eq:phaseError}
\end{eqnarray}

\end_inset

where 
\begin_inset Formula $k_{p}\equiv\omega_{p}/c$
\end_inset

 and 
\begin_inset Formula $\omega_{p}$
\end_inset

 is the frequency of light*
\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
This is because: First assume that if the test mass is unperturbed then
 the distance between the reflecting mirror and the test mass is an integer
 number of wavelengths.
 Then the phase shift must come from the distance the test mass is from
 its equilibrium position: 
\begin_inset Formula $\hat{x}$
\end_inset

.
 Since if reflected off the mirror, we have to multiply by 2 and since it
 is reflect 
\begin_inset Formula $F$
\end_inset

 times we have multiply by 
\begin_inset Formula $F$
\end_inset

 so 
\begin_inset Formula $extraDistanceTravelled\propto2F\hat{x}$
\end_inset

.
 The phase is equal to 
\begin_inset Formula $k.r$
\end_inset

 and so the extra phase shift is 
\begin_inset Formula $-2Fk_{p}x$
\end_inset

.
 The minus sign comes from the fact that the plane wave is defined as 
\begin_inset Formula $\cos\left(\omega_{0}t-\phi\right)$
\end_inset


\end_layout

\end_inset

.
 Note that 
\begin_inset Formula $\hat{\phi}_{j}^{r}$
\end_inset

 is the observable measured by the detector.
 For convenience, rewrite this equation to be 
\begin_inset Formula 
\begin{eqnarray}
\tilde{x}_{j} & \equiv & -\frac{\hat{\phi}_{j}^{r}}{2Fk_{p}}\nonumber \\
 & = & \hat{x}\left(t_{j}\right)+\hat{x}_{fl}\left(t_{j}\right),\label{eq:discrete position expression temp}
\end{eqnarray}

\end_inset

where 
\begin_inset Formula $\hat{x}_{fl}\left(t_{j}\right)=-\hat{\phi}_{j}/2Fk_{p}$
\end_inset

 posseses an RMS uncertainty of 
\begin_inset Formula $\Delta x_{fl}=\Delta\phi/2Fk_{p}$
\end_inset

, where 
\begin_inset Formula $\Delta\phi=\sqrt{\left\langle \hat{\phi}^{2}\right\rangle -\left\langle \hat{\phi}\right\rangle ^{2}}$
\end_inset

, and it represents the measurement noise*
\begin_inset Note Comment
status collapsed

\begin_layout Plain Layout
due to the interaction of the pulses with the test mass (as it will be shown
 later on, the phase and energy of the pulse have a Heisenberg like uncertainty
 relation-i.e.
 they have a non-zero commutator.
 Hence, if we want to keep the uncertainty in the energy of the beam to
 a minimum then the phase 
\begin_inset Formula $\hat{\phi}_{j}$
\end_inset

 will be affected.
 Moreover the test mass' momentum will be affected via radiation pressure
 (by an amount called the back action momentum), which will result in an
 uncertainty relation between the measurement of the test mass' position
 - by measuring the phase of the pulse - and the back action momentum )
\end_layout

\end_inset

.
 Assume that the noise introduced by the detector is negligible so that
 
\begin_inset Formula $\Delta\phi$
\end_inset

 dominates and so 
\begin_inset Formula 
\begin{eqnarray}
\Delta\tilde{x}_{measured} & = & \frac{\Delta\phi}{2Fk_{p}}.\label{eq:uncertaintyPositionExampleMeasurement}\\
\nonumber 
\end{eqnarray}

\end_inset

*
\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
we are assuming that the noise from 
\begin_inset Formula $\hat{x}$
\end_inset

 in Eq.
 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:discrete position expression temp"

\end_inset

 is negligible compared to 
\begin_inset Formula $\Delta x_{fl}$
\end_inset

 and this is reasonable as each new measurement pulse refines existing results.
 For instance, if the test mass is at rest then 
\begin_inset Formula $\left\langle \Delta\hat{x}\right\rangle =\#measurementPulses\times\Delta x_{fl}$
\end_inset

.
 (note it does not matter that the oscillator is moving because we know
 its trajectory).
\end_layout

\end_inset

Upon each reflection, each light pulse transfers a back-action momentum
 to the test mass equal to 
\begin_inset Formula 
\begin{eqnarray*}
\hat{p}_{j}^{ba} & = & \hat{p}_{j}^{after}-\hat{p}_{j}^{before}=\frac{2F}{c}\hat{\mathcal{W}}_{j},\\
\end{eqnarray*}

\end_inset

where 
\begin_inset Formula $\hat{p}_{j}^{after}$
\end_inset

 is the momentum of the light pulse after being reflected 
\begin_inset Formula $F$
\end_inset

 times and 
\begin_inset Formula $\hat{\mathcal{W}}_{j}$
\end_inset

 is the energy of the jth pulse*
\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
To see why note that the momentum of light is given by 
\begin_inset Formula $hk=h\omega/c=E/c$
\end_inset

.
 Each reflection carries a factor of 2 with it and there are 
\begin_inset Formula $F$
\end_inset

 reflections.
 More thoroughly, each light pulse carries a momentum that looks like 
\begin_inset Formula $P=\sum hk\hat{n}_{k}$
\end_inset

 (see 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:momentumQMfield"

\end_inset

)
\end_layout

\end_inset

.
 The random part of this back-action, which cannot be compensated for, is
 equal to
\begin_inset Formula 
\begin{eqnarray}
\hat{p}^{ba}\left(t_{j}\right) & = & \hat{p}_{j}^{ba}-\left\langle \hat{p}_{j}^{ba}\right\rangle \equiv\frac{2F}{c}\left(\hat{\mathcal{W}}_{j}-\mathcal{W}\right),\label{eq:discrete back action example}\\
\nonumber 
\end{eqnarray}

\end_inset

where 
\family roman
\series medium
\shape up
\size normal
\emph off
\bar no
\strikeout off
\uuline off
\uwave off
\noun off
\color none

\begin_inset Formula $\left\langle \hat{p}_{j}^{ba}\right\rangle =2F\mathcal{W}/c$
\end_inset

*
\begin_inset Note Note
status collapsed

\begin_layout Plain Layout

\family roman
\series medium
\shape up
\size normal
\emph off
\bar no
\strikeout off
\uuline off
\uwave off
\noun off
\color none
We can measure what 
\begin_inset Formula $\left\langle \hat{p}_{j}^{ba}\right\rangle $
\end_inset

 is and substract from the measurement result or for example compensate
 it by the use of an actuator
\end_layout

\end_inset

 and so the RMS uncertainty is equal to 
\begin_inset Formula 
\begin{eqnarray}
\Delta p_{ba} & = & 2F\Delta\mathcal{W}/c.\label{eq:uncertaintyMomentumExampleMeasurement}\\
\nonumber 
\end{eqnarray}

\end_inset


\family default
\series default
\shape default
\size default
\emph default
\bar default
\strikeout default
\uuline default
\uwave default
\noun default
\color inherit
The energy and phase of each pulse are canonically conjugate observables
 that obey 
\begin_inset Formula 
\begin{eqnarray}
\Delta\mathcal{W}\Delta\phi & \geq & \hbar\omega_{p}/2\label{eq:doubdtful phase energy uncertainty relation}\\
\nonumber 
\end{eqnarray}

\end_inset

*
\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
Use 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:uncertainty phase operator"

\end_inset

 to see why but note that that expression is incorrect although it might
 hold for pure fock states as the phase operator is hermitian on fock states
 not equal to the vacuum??
\end_layout

\begin_layout Plain Layout
Another interpertation is 
\begin_inset Formula $\Delta E\Delta t\geq\hbar/2$
\end_inset

 then let 
\begin_inset Formula $\Delta\phi=\omega\Delta t$
\end_inset

 which comes from 
\begin_inset Formula $E\propto\cos\left(kr-\omega t\right)$
\end_inset

 so as time progresses an extra phase is introduced.
\end_layout

\end_inset

 and so using Eqs.
 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:uncertaintyMomentumExampleMeasurement"

\end_inset

 and 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:uncertaintyPositionExampleMeasurement"

\end_inset

, we obtain that 
\begin_inset Formula 
\begin{eqnarray}
\Delta x_{measurement}\Delta p_{ba} & \geq & \frac{\hbar}{2}.\label{eq:heisenberg uncertainty example measurement}\\
\nonumber 
\end{eqnarray}

\end_inset

*
\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
\begin_inset Formula 
\begin{eqnarray*}
\frac{2F}{2F}\Delta W\Delta\phi\frac{1}{k_{p}c} & = & \frac{\hbar}{2}\omega_{p}\frac{1}{\omega}_{p}\\
\end{eqnarray*}

\end_inset


\end_layout

\end_inset


\end_layout

\begin_layout Standard
(Section 4.1.1 of 
\begin_inset CommandInset citation
LatexCommand cite
key "Danilishin2012"

\end_inset

)
\end_layout

\begin_layout Subsubsection
Continuous Measurement
\end_layout

\begin_layout Standard
Suppose a pulse measures the position of the test mass every 
\begin_inset Formula $\vartheta$
\end_inset

 over a long time interval 
\begin_inset Formula $T$
\end_inset

 such that
\begin_inset Formula 
\begin{eqnarray*}
N & = & \frac{T}{\vartheta}\gg1.\\
\end{eqnarray*}

\end_inset

Use the results of all the measurements to refine the precision of the test-mass
 position 
\begin_inset Formula $x$
\end_inset

 estimate:
\begin_inset Formula 
\begin{eqnarray*}
\Delta x_{T} & = & \frac{\Delta x_{meas}}{\sqrt{N}}=\Delta x_{meas}\sqrt{\frac{\vartheta}{T}},\\
\end{eqnarray*}

\end_inset

where 
\begin_inset Formula $\Delta x_{T}$
\end_inset

 is the uncertainty in the position of the test-mass after a time interval
 
\begin_inset Formula $T$
\end_inset

 and 
\family roman
\series medium
\shape up
\size normal
\emph off
\bar no
\strikeout off
\uuline off
\uwave off
\noun off
\color none

\begin_inset Formula $\Delta x_{meas}$
\end_inset

 is the uncertainty after a single pulse.

\family default
\series default
\shape default
\size default
\emph default
\bar default
\strikeout default
\uuline default
\uwave default
\noun default
\color inherit
 At the same time, the accumulated random kicks the object received from
 each of the pulses' random kicks, result in a random change of the object’s
 momentum similar to that of Brownian motion, and thus the uncertainty in
 the object's momentum increases in the same diffusive manner (like in Eq.
 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:diffusion brownian motion"

\end_inset

):
\begin_inset Formula 
\begin{eqnarray*}
\Delta p_{T} & = & \Delta p_{ba}\sqrt{N}=\Delta p_{ba}\sqrt{\frac{T}{\vartheta}},\\
\end{eqnarray*}

\end_inset

where 
\begin_inset Formula $\Delta p_{ba}$
\end_inset

 is given by Eq.
 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:uncertaintyMomentumExampleMeasurement"

\end_inset

.
\end_layout

\begin_layout Standard
In the continuous measurement limit, we assume that the interval between
 measurements is infinitesimally small (
\begin_inset Formula $\vartheta\rightarrow0$
\end_inset

; the sequence of individual pulses transforms into a continuous beam) and
 that each measurement is infinitesimally weak, i.e.
 
\begin_inset Formula $\Delta p_{ba}\rightarrow0$
\end_inset

 which implies through 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:heisenberg uncertainty example measurement"

\end_inset

 that 
\begin_inset Formula $\Delta x_{meas}\rightarrow\infty$
\end_inset

.
 We need more adequate parameters to characterize a measurement than 
\begin_inset Formula $\Delta x_{meas}$
\end_inset

 and 
\begin_inset Formula $\Delta p_{ba}$
\end_inset

*
\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
it is meaningless to work with parameters that are equal to :
\begin_inset Formula 
\begin{eqnarray*}
\Delta x_{meas} & \rightarrow & \infty\\
\Delta p_{ba} & \rightarrow & 0
\end{eqnarray*}

\end_inset

.
\end_layout

\end_inset

.
 Instead use, 
\begin_inset Formula 
\begin{eqnarray*}
S_{x} & \equiv & \lim_{\vartheta\rightarrow0}\left(\Delta x_{meas}\right)^{2}\vartheta\qquad\implies\Delta x_{T}=\sqrt{\frac{S_{x}}{T}}\\
S_{F} & \equiv & \lim_{\vartheta\rightarrow0}\frac{\left(\Delta p_{ba}\right)^{2}}{\vartheta}\qquad\implies\Delta p_{T}=\sqrt{S_{F}T}.
\end{eqnarray*}

\end_inset

In the continuous limit, the observable measured by the detector (given
 in the discrete limit by Eq.
 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:physics delta function"

\end_inset

) becomes
\begin_inset Formula 
\begin{eqnarray}
\tilde{x}\left(t\right) & = & \hat{x}\left(t\right)+\hat{x}_{fl}\left(t\right)\qquad\hat{x}_{fl}\left(t\right)=-\frac{\hat{\phi}\left(t\right)}{2Fk_{p}}.\label{eq:continuous measurement temp}\\
\nonumber 
\end{eqnarray}

\end_inset

It is convenient to define the following quantities
\begin_inset Formula 
\begin{eqnarray}
S_{x} & \equiv & \frac{S_{\phi}}{4F^{2}k_{p}^{2}}\qquad S_{\phi}\equiv\lim_{\vartheta\rightarrow0}\left(\Delta\phi_{pulse}\right)^{2}\vartheta\nonumber \\
S_{F} & \equiv & \frac{4F^{2}S_{\mathcal{I}}}{c^{2}}\qquad S_{\mathcal{I}}\equiv\lim_{\vartheta\rightarrow0}\frac{\left(\Delta\mathcal{W}_{pulse}\right)^{2}}{\vartheta},\label{eq:defExampleSpectralPhase}
\end{eqnarray}

\end_inset

*
\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
these hold because of expression 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:continuous measurement temp"

\end_inset

 with 
\begin_inset Formula $\left\langle \Delta\hat{x}\right\rangle =0$
\end_inset


\end_layout

\end_inset

then from expression 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:continuous measurement temp"

\end_inset

, we we can interpret 
\begin_inset Formula $S_{x}$
\end_inset

 as the double-sided power spectral density of the measurement noise introduced
 due to 
\begin_inset Formula $\hat{x}_{fl}$
\end_inset

*
\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
We have that 
\begin_inset Formula 
\begin{eqnarray*}
\hat{x}_{fl}\left(t\right) & = & -\frac{\hat{\phi}\left(t\right)}{2Fk_{p}}\\
\implies\hat{x}_{fl}\left(\omega\right) & = & -\frac{\hat{\phi}\left(\omega\right)}{2Fk_{p}}
\end{eqnarray*}

\end_inset

Denote 
\begin_inset Formula $-1/2Fk_{p}$
\end_inset

 by 
\begin_inset Formula $H\left(\omega\right)$
\end_inset

 then (Eq.
 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:def spectral density quantum"

\end_inset

) 
\begin_inset Formula 
\begin{eqnarray*}
2\pi S_{x}\left(\Omega\right)\delta\left(\Omega-\Omega^{'}\right) & = & \left|H\left(\Omega\right)\right|^{2}\left\langle \hat{\phi}\left(\Omega\right)\hat{\phi}^{\dagger}\left(\Omega^{'}\right)\right\rangle _{symm}\\
 & = & 2\pi\left|H\left(\Omega\right)\right|^{2}\delta\left(\Omega-\Omega^{'}\right)S_{\phi}
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Plain Layout
To see why 
\begin_inset Formula $S_{\phi}=\lim_{\vartheta\rightarrow0}\left(\Delta\phi_{pulse}\right)^{2}\vartheta$
\end_inset

 note that 
\begin_inset Formula 
\begin{eqnarray*}
S_{\phi} & = & \mathcal{F}\left(\left\langle \phi\left(t\right)\phi\left(0\right)\right\rangle _{symm}\right)\\
\end{eqnarray*}

\end_inset

but the pulses are uncorrelated so we expect that 
\begin_inset Formula $C\left(t_{j}-t_{i}\right)=\lim_{\vartheta\rightarrow0}\left\langle \phi\left(t_{j}\right)\phi\left(t_{i}\right)\right\rangle _{symm}=\delta\left(t_{j}-t_{i}\right)\left(\Delta\phi_{pulse}\right)^{2}=\delta\left(\tau\right)\left(\Delta\phi_{pulse}\right)^{2}$
\end_inset

 which we can write as 
\begin_inset Formula $\lim_{\vartheta\rightarrow0}\frac{\delta_{ij}}{\vartheta}\left(\Delta\phi_{pulse}\right)^{2}$
\end_inset

 (as in 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:physics delta function"

\end_inset

) 
\begin_inset Formula 
\begin{eqnarray*}
S_{\phi} & = & \mathcal{F}\left(C\right)\\
\mathcal{F}\left(\delta\left(\tau\right)\left(\Delta\phi_{pulse}\right)^{2}\right) & = & \left(\Delta\phi_{pulse}\right)^{2}\\
\end{eqnarray*}

\end_inset

but the problem is that 
\begin_inset Formula $\Delta\phi_{pulse}\rightarrow\infty$
\end_inset

 in the continuous limit (because the energy is unperturbed and 
\begin_inset Formula $\Delta\phi\Delta\mathcal{W}\geq\hbar/2$
\end_inset

)
\end_layout

\end_inset

 and 
\begin_inset Formula $S_{\phi}$
\end_inset

 as the power double-sided spectral density of 
\begin_inset Formula $\hat{\phi}\left(t\right)$
\end_inset

.
\end_layout

\begin_layout Standard
We now need to take the continuous limit of 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:discrete back action example"

\end_inset

.
 We would like to write it in the following form
\begin_inset Formula 
\begin{eqnarray*}
\frac{d\hat{p}_{ba}}{dt} & = & \hat{F}_{va}\left(t\right),\\
\end{eqnarray*}

\end_inset

where 
\begin_inset Formula $\hat{F}_{fl}$
\end_inset

 is a continuous Markovian random force, defined as the limit of the discrete
 markov process:
\begin_inset Formula 
\begin{eqnarray*}
\hat{F}_{va}\left(t_{j}\right) & = & \lim_{\vartheta\rightarrow0}\frac{\hat{p}_{ba}\left(t_{j}\right)}{\vartheta}=\frac{2F}{c}\lim_{\vartheta\rightarrow0}\frac{\hat{\mathcal{W}}_{j}-\hat{\mathcal{W}}}{\vartheta}\\
 & = & \frac{2F}{c}\left[\hat{I}\left(t_{j}\right)-I_{0}\right],
\end{eqnarray*}

\end_inset

where 
\begin_inset Formula $\hat{I}$
\end_inset

 is the operator defining the optical power*
\begin_inset Note Comment
status collapsed

\begin_layout Plain Layout
to this equation of motion, corresponds a hamiltonian that is 
\begin_inset Formula $\propto\frac{2F}{c}Ix$
\end_inset


\end_layout

\end_inset

.
 The double-sided power spectral density of 
\begin_inset Formula $\hat{F}$
\end_inset

 is 
\family roman
\series medium
\shape up
\size normal
\emph off
\bar no
\strikeout off
\uuline off
\uwave off
\noun off
\color none

\begin_inset Formula $S_{F}$
\end_inset

 and that of 
\begin_inset Formula $\hat{I}$
\end_inset

 is 
\begin_inset Formula $S_{\mathcal{I}}$
\end_inset

.
 Assuming that 
\begin_inset Formula $S_{x}$
\end_inset

 and 
\begin_inset Formula $S_{F}$
\end_inset

 are uncorrelated, we obtain the following relation 
\begin_inset Formula 
\begin{eqnarray*}
S_{x}S_{F} & = & \frac{S_{\phi}S_{\mathcal{I}}}{\omega_{p}^{2}}\geq\frac{\hbar^{2}}{4}.\\
\end{eqnarray*}

\end_inset

*
\begin_inset Note Note
status collapsed

\begin_layout Plain Layout

\family roman
\series medium
\shape up
\size normal
\emph off
\bar no
\strikeout off
\uuline off
\uwave off
\noun off
\color none
We have that 
\begin_inset Formula 
\begin{eqnarray*}
S_{x}S_{F} & = & \frac{S_{\phi}S_{I}}{k_{p}^{2}c^{2}}\\
 & = & \frac{S_{\phi}S_{I}}{\omega_{p}^{2}}\\
 & = & \frac{\left(\Delta\phi\right)^{2}\left(\Delta W\right)^{2}}{\omega_{p}^{2}}
\end{eqnarray*}

\end_inset

and 
\begin_inset Formula $\Delta\phi^{2}\Delta W\ge\hbar^{2}\omega_{P}^{2}/4$
\end_inset

 (see 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:doubdtful phase energy uncertainty relation"

\end_inset

) 
\end_layout

\end_inset

 
\family default
\series default
\shape default
\size default
\emph default
\bar default
\strikeout default
\uuline default
\uwave default
\noun default
\color inherit
It is useful to remember the approximations we made in this analysis: 
\end_layout

\begin_layout Enumerate
Energy and phase fluctuations in each of the light pulses are uncorrelated:
 
\begin_inset Formula $\left\langle \hat{\mathcal{W}}\left(t_{j}\right)\hat{\phi}\left(t_{j}\right)\right\rangle =0$
\end_inset

*
\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
As we are working with a perfect laser with no sidebands so we have 
\begin_inset Formula $\left[a_{c},a_{s}\right]\approx0$
\end_inset

 (see 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:commutation2photonformalism"

\end_inset

) 
\end_layout

\end_inset

, i.e.
 these noise sources are not correlated.
\end_layout

\begin_layout Enumerate
All pulses have the same energy and phase uncertainties 
\begin_inset Formula $\Delta\mathcal{W}$
\end_inset

 and 
\begin_inset Formula $\Delta\phi$
\end_inset

, respectively*
\begin_inset Note Comment
status collapsed

\begin_layout Plain Layout
and so we have a stationary process
\end_layout

\end_inset

.
\end_layout

\begin_layout Enumerate
The pulses are independent from each other (i.e.
 we have Markovian (white) noise*
\begin_inset Note Comment
status collapsed

\begin_layout Enumerate
which entails that we have constant (frequency independent) spectral densities
 because the correlation function is a delta function in markovian noise
\end_layout

\end_inset

.
 
\end_layout

\begin_layout Standard
We will call 
\emph on
simple quantum meters 
\emph default
measurement setups that obey the first 2 features (non-correlated and stationary
 noise).
\end_layout

\begin_layout Standard
(From section 4.1.2.
 of 
\begin_inset CommandInset citation
LatexCommand cite
key "Danilishin2012"

\end_inset

)
\end_layout

\begin_layout Subsubsection*
Simple example: Light in a coherent state
\end_layout

\begin_layout Standard
Assume the laser light to be in a coherent state with classical amplitude
 
\begin_inset Formula $A_{c}$
\end_inset

 with the phase quadrature 
\begin_inset Formula $A_{s}=0$
\end_inset

 (and so 
\begin_inset Formula $\left\langle \hat{\phi}\right\rangle =0$
\end_inset

).
 Let 
\begin_inset Formula $v=\mathcal{A}c\vartheta$
\end_inset

 then 
\begin_inset Formula 
\begin{eqnarray}
\hat{\mathcal{W}} & = & \frac{v}{4\pi}\left[\frac{1}{\vartheta}\int_{t-\vartheta/2}^{t+\vartheta/2}d\tau\hat{E}^{2}\left(\tau\right)\right],\nonumber \\
 & = & \mathcal{W}+\delta\hat{\mathcal{W}}\label{eq:temp245}
\end{eqnarray}

\end_inset

*
\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
The integral over the pulse is because the light last for 
\begin_inset Formula $\vartheta$
\end_inset

.
 The factor of 
\begin_inset Formula $\mathcal{A}c\vartheta/4\pi$
\end_inset

 is because we are looking at the energy inside the volume occupied by the
 pulse: 
\begin_inset Formula $\mathcal{A}c\vartheta$
\end_inset

 where 
\begin_inset Formula $\mathcal{A}$
\end_inset

 is the cross-sectional area of the beam and the fact that in SI we have
 that poynting vector is 
\begin_inset Formula $\propto c\epsilon_{0}E^{2}$
\end_inset

 which under CGS becomes 
\begin_inset Formula $c/4\pi E^{2}$
\end_inset

 (eq.
 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:simple_classical_intensity_SI"

\end_inset

 and 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:poynting in cgs"

\end_inset

).
 Another way to think about it is that the poynting vector has dimensions
 of 
\begin_inset Formula $W/m^{2}$
\end_inset

 and so to obtain the energy we obtain by the characteristic area 
\begin_inset Formula $\mathcal{A}$
\end_inset

 and the characteristic time 
\begin_inset Formula $\vartheta$
\end_inset

.
\end_layout

\begin_layout Plain Layout
The factor of 
\family roman
\series medium
\shape up
\size normal
\emph off
\bar no
\strikeout off
\uuline off
\uwave off
\noun off
\color none

\begin_inset Formula $\frac{1}{\vartheta}$
\end_inset

 is due to time-averaging.
\end_layout

\end_inset

where 
\begin_inset Formula $\mathcal{W}=v\mathcal{C}_{0}^{2}A_{c}^{2}/\left(8\pi\right)=\mathcal{I}_{0}\vartheta$
\end_inset

 is the mean pulse energy and 
\begin_inset Formula $\mathcal{C}_{0}=\sqrt{4\pi\hbar\omega_{0}/\mathcal{A}c}$
\end_inset

*
\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
See section 
\begin_inset CommandInset ref
LatexCommand ref
reference "sub:2photon-formalism"

\end_inset

 
\end_layout

\end_inset

 and
\begin_inset Formula 
\begin{eqnarray*}
\delta\hat{\mathcal{W}} & = & \frac{\mathcal{A}c\mathcal{C}_{0}^{2}}{4\pi}2A_{c}\int_{t-\vartheta/2}^{t+\vartheta/2}d\tau\hat{a}_{c}\left(\tau\right)\\
 & \equiv & \sqrt{2\hbar\omega_{p}\mathcal{W}}\hat{X}_{\vartheta}\left(t\right),
\end{eqnarray*}

\end_inset

where (after ignoring terms in second order in 
\begin_inset Formula $\hat{a}_{c}$
\end_inset

 or 
\begin_inset Formula $\hat{a}_{s}$
\end_inset

) 
\begin_inset Formula $\hat{X}_{\vartheta}\left(t\right)\equiv\left(\int_{t-\vartheta/2}^{t+\vartheta/2}d\tau\hat{a}_{c}\left(\tau\right)\right)/\sqrt{\vartheta}$
\end_inset

*
\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
We first show the second equality of 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:temp245"

\end_inset

.
 This is because from Eq.
 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:final simple single mode laser"

\end_inset

 with 
\begin_inset Formula $\bar{a}=A_{c}$
\end_inset

, we have 
\begin_inset Formula 
\begin{eqnarray*}
\hat{E}\left(t\right) & = & \mathcal{C}_{0}\left[\left(A_{c}+\hat{\mathcal{E}_{c}}\left(t\right)\right)\cos\omega_{0}t+\hat{\mathcal{E}_{s}}\left(t\right)\sin\omega_{0}t\right].\\
\implies\hat{\mathcal{W}} & = & \frac{v}{4\pi}\mathcal{C}_{0}^{2}\left(\frac{A_{c}^{2}}{2}+A_{c}\frac{1}{\vartheta}\int\hat{\mathcal{E}}_{c}\left(t\right)dt+\frac{\bar{\hat{\mathcal{E}_{c}}^{2}\left(t\right)}}{2}+\frac{\bar{\hat{\mathcal{E}}_{s}^{2}}}{2}\right)
\end{eqnarray*}

\end_inset

(where in the second equality we used that the time average of 
\begin_inset Formula $\cos\sin$
\end_inset

 over one period is 0).
 We ignore terms 
\begin_inset Formula $O\left(\hat{\mathcal{E}}_{sc}^{2}\right)$
\end_inset

 as they are small 
\begin_inset Formula 
\begin{eqnarray*}
\implies\hat{\mathcal{W}} & = & \frac{v}{8\pi}A_{c}^{2}\mathcal{C}_{0}^{2}+\frac{v\mathcal{C}_{0}^{2}}{4\pi\vartheta}A_{c}\int\hat{\mathcal{E}}_{c}\left(t\right)dt\\
 & = & \frac{v}{8\pi}A_{c}^{2}\mathcal{C}_{0}^{2}+\frac{\mathcal{A}c\mathcal{C}_{0}^{2}}{4\pi}A_{c}\int\hat{\mathcal{E}}_{c}\left(t\right)dt\\
 & = & \frac{v}{8\pi}A_{c}^{2}\mathcal{C}_{0}^{2}+\frac{\mathcal{A}c\sqrt{\vartheta}\mathcal{C}_{0}^{2}}{4\pi}A_{c}X
\end{eqnarray*}

\end_inset

We have that 
\begin_inset Formula $\mathcal{C}_{0}^{2}=4\pi\hbar\omega_{0}/\mathcal{A}c$
\end_inset

 and so 
\begin_inset Formula 
\begin{eqnarray*}
\hat{\mathcal{W}} & = & \frac{v}{8\pi}A_{c}^{2}\mathcal{C}_{0}^{2}+\hbar\omega A_{c}\sqrt{\vartheta}X\\
 & = & I_{0}\vartheta+\sqrt{2\hbar\omega\vartheta I_{0}}X
\end{eqnarray*}

\end_inset

but 
\begin_inset Formula $I_{0}=A_{c}^{2}\hbar\omega_{0}/2$
\end_inset


\end_layout

\end_inset

.
\end_layout

\begin_layout Standard
Define a phase for each pulse by using that 
\begin_inset Formula $\mathcal{E}_{s}=\mathcal{E}_{0}\sin\phi_{0}$
\end_inset

 (Relation 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:transformationElectricFieldPictures"

\end_inset

) where 
\begin_inset Formula $\mathcal{E}_{0}$
\end_inset

 is the maximum amplitude of light.
 Then if we assume that 
\begin_inset Formula $\left\langle \hat{\phi}\right\rangle =0$
\end_inset

 and that 
\begin_inset Formula $\left\langle \hat{\phi}^{2}\right\rangle \ll1$
\end_inset

, we have that 
\begin_inset Formula 
\begin{eqnarray}
\hat{\phi} & \approx & \frac{1}{A_{c}\vartheta}\int_{-\vartheta/2}^{\vartheta/2}d\tau\hat{a}_{s}\left(\tau\right)\nonumber \\
 & \equiv & \sqrt{\frac{\hbar\omega_{p}}{2\mathcal{W}}}\hat{Y}_{\vartheta},\label{eq:defphasetemp1}
\end{eqnarray}

\end_inset

where 
\begin_inset Formula $\hat{Y}_{\vartheta}\left(t\right)=\left(\int_{t-\vartheta/2}^{t+\vartheta/2}d\tau\hat{a}_{s}\left(\tau\right)\right)/\sqrt{\vartheta}$
\end_inset

 and 
\begin_inset Formula $\left[\hat{X}_{\vartheta},\hat{Y}_{\vartheta}\right]=i$
\end_inset

*
\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
If 
\begin_inset Formula $\left\langle \hat{\phi}\right\rangle =0,\left\langle \hat{\phi}^{2}\right\rangle \ll1$
\end_inset

 then we have that 
\begin_inset Formula 
\begin{eqnarray*}
\hat{\phi} & \approx & \left(\mathcal{E}_{s}=\hat{a}_{s}\right)/\left(\mathcal{E}_{0}=A_{c}\right)\\
\implies\hat{\phi}_{time-averaged} & = & \frac{1}{A_{c}\vartheta}\int_{-\vartheta/2}^{\vartheta/2}d\tau\hat{a}_{s}\left(\tau\right)\\
 & = & \frac{1}{A_{c}\sqrt{\vartheta}}Y=\sqrt{\frac{\hbar\omega}{2W}}Y.
\end{eqnarray*}

\end_inset

Now, 
\begin_inset Formula 
\begin{eqnarray*}
\left[\hat{X}_{\vartheta},\hat{Y}_{\vartheta}\right] & = & \frac{1}{\vartheta}\int dtd\tau\left[a_{c}\left(t\right),a_{s}\left(\tau\right)\right]\\
 & = & \frac{1}{\vartheta}\int dtd\tau\left[a_{c},a_{s}\right]=\frac{1}{\vartheta}\left(\frac{1}{2\pi}\right)^{2}\int dxdydtd\tau e^{ixt}e^{iy\tau}\left[a_{c}\left(x\right),a_{s}\left(y\right)\right]\\
 & = & \frac{1}{\vartheta}\left(\frac{1}{2\pi}\right)^{2}\int dxdydtd\tau e^{ixt}e^{iy\tau}\left[a_{c}\left(x\right),a_{s}\left(y\right)\right]\\
 & = & \frac{1}{\vartheta}\left(\frac{1}{2\pi}\right)^{2}\int dxdydtd\tau e^{ixt}e^{iy\tau}\left[a_{c}\left(x\right),a_{s}^{\dagger}\left(-y\right)\right]\\
 & = & \frac{1}{\vartheta}\left(\frac{1}{2\pi}\right)i\int dxdydtd\tau e^{ixt}e^{iy\tau}\delta\left(x+y\right)\\
 & = & \frac{i}{\vartheta}\left(\frac{1}{2\pi}\right)\int dxdtd\tau e^{ix\left(t-\tau\right)}\\
 & = & \frac{i}{\vartheta}\int dtd\tau\delta\left(t-\tau\right)=\frac{i}{\vartheta}\int dt=i,
\end{eqnarray*}

\end_inset

where we have used 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:phasequadraturesarehermitian"

\end_inset

 and 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:commutation2photonformalism"

\end_inset

.
\end_layout

\end_inset

.
 Moreover, for a coherent state, we have that 
\begin_inset Formula 
\begin{eqnarray*}
\Delta\hat{X}_{\vartheta}^{2} & = & \Delta\hat{Y}_{\vartheta}^{2}=1/2\\
\end{eqnarray*}

\end_inset

*
\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
We have that (remember that the operators are displacement transformed (section
 
\begin_inset CommandInset ref
LatexCommand ref
reference "sub:The-displacement-transformation"

\end_inset

) but since the displacement operators are hermitian, we can just work with
 the original operators before the transformation 
\begin_inset Formula 
\begin{eqnarray*}
\left\langle X\right\rangle  & = & \frac{1}{\sqrt{\vartheta}}\int dt\left\langle a_{c}\left(t\right)\right\rangle \\
 & = & \frac{1}{\sqrt{\vartheta}}\int dt\left\langle a_{c}\left(t\right)\right\rangle \\
 & = & \frac{1}{\sqrt{\vartheta}}\int dt\braket{\alpha|\mathcal{F}^{-1}\left(\frac{a_{\omega_{0}+\Omega}+a_{\omega_{0}-\Omega}^{\dagger}}{\sqrt{2}}\right)|\alpha}
\end{eqnarray*}

\end_inset

which becomes 
\begin_inset Formula 
\begin{eqnarray*}
\left\langle X\right\rangle  & = & \frac{1}{\sqrt{\vartheta}}\int dt\frac{1}{\sqrt{2}}\mathcal{F}^{-1}\left(2Re\left[\alpha\right]\delta\left(\Omega\right)\right)\\
 & = & \frac{1}{\sqrt{\vartheta}}\int dt\frac{1}{\sqrt{2}}\frac{Re\left[\alpha\right]}{\pi}=\frac{Re\left[\alpha\right]\sqrt{\vartheta}}{\pi\sqrt{2}}\\
\implies\left\langle X\right\rangle ^{2} & = & \frac{Re\left[\alpha\right]^{2}\vartheta}{2\pi^{2}}
\end{eqnarray*}

\end_inset

We have that 
\begin_inset Formula 
\begin{eqnarray*}
X^{2} & = & \frac{1}{\vartheta}\int dtd\tau a_{c}\left(t\right)a_{c}\left(\tau\right)\\
 & = & \left(\frac{1}{2\pi}\right)^{2}\frac{1}{\vartheta}\int dtd\tau dxdye^{ixt}e^{iy\tau}\left\langle a_{c}\left(x\right)a_{c}\left(y\right)\right\rangle \\
\implies\left\langle X^{2}\right\rangle  & = & \left(\frac{1}{2\pi}\right)^{2}\frac{1}{\vartheta}\int dtd\tau dxdye^{ixt}e^{iy\tau}\left\langle \frac{a_{\omega_{0}+x}a_{\omega_{0}+y}+a_{\omega_{0}+x}a_{\omega_{0}-y}^{\dagger}+a_{\omega_{0}-x}^{\dagger}a_{\omega_{0}+y}+a_{\omega_{0}-x}^{\dagger}a_{\omega_{0}-y}^{\dagger}}{2}\right\rangle \\
 & = & \left(\frac{1}{2\pi}\right)^{2}\frac{1}{\vartheta}\int dtd\tau dxdye^{ixt}e^{iy\tau}\left\langle \frac{a_{\omega_{0}+x}a_{\omega_{0}+y}+\left(2\pi\right)\delta\left(x+y\right)+2a_{\omega_{0}-x}^{\dagger}a_{\omega_{0}+y}+a_{\omega_{0}-x}^{\dagger}a_{\omega_{0}-y}^{\dagger}}{2}\right\rangle \\
 & = & \left(\frac{1}{2\pi}\right)^{2}\frac{1}{\vartheta}\frac{\alpha^{2}+\alpha^{*2}+2\left|\alpha\right|^{2}}{2}\int dtd\tau dxdye^{ixt}e^{iy\tau}\delta\left(x\right)\delta\left(y\right)+\frac{1}{\left(2\pi\right)^{2}\vartheta}\frac{\vartheta\left(2\pi\right)^{2}}{2}\\
 & = & \left(\frac{1}{2\pi}\right)^{2}\frac{1}{\vartheta}\frac{\alpha^{2}+\alpha^{*2}+2\left|\alpha\right|^{2}}{2}\int dtd\tau+\frac{1}{2}\\
 & = & \left(\frac{1}{2\pi}\right)^{2}\vartheta\frac{\alpha^{2}+\alpha^{*2}+2\left|\alpha\right|^{2}}{2}+\frac{1}{2}=\frac{\vartheta Re\left[\alpha\right]^{2}}{2\pi^{2}}+\frac{1}{2}
\end{eqnarray*}

\end_inset

and so 
\begin_inset Formula 
\begin{eqnarray*}
\Delta X^{2} & = & \frac{1}{2}\\
\end{eqnarray*}

\end_inset

We can follow the same analysis for 
\begin_inset Formula $Y$
\end_inset

 to obtain that 
\begin_inset Formula $\Delta Y^{2}=\Delta X^{2}$
\end_inset

.
\end_layout

\end_inset

and hence we obtain that (using Eqs.
 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:defphasetemp1"

\end_inset

, 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:temp245"

\end_inset

, 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:uncertaintyPositionExampleMeasurement"

\end_inset

, 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:uncertaintyMomentumExampleMeasurement"

\end_inset

) 
\begin_inset Formula 
\begin{eqnarray}
\Delta\phi & = & \frac{1}{2}\sqrt{\frac{\hbar\omega_{p}}{\mathcal{W}}},\qquad\Delta\mathcal{W}=\sqrt{\hbar\omega_{p}\mathcal{W}}\label{eq:energy phase uncertainty simple example}\\
\Delta x_{meas} & = & \frac{c}{4F}\sqrt{\frac{\hbar}{\omega_{p}\mathcal{W}}},\qquad\Delta p_{ba}=\frac{2F}{c}\sqrt{\hbar\omega_{p}\mathcal{W}}\nonumber 
\end{eqnarray}

\end_inset

and so using Eq.
 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:defExampleSpectralPhase"

\end_inset

 we have that 
\begin_inset Formula 
\begin{eqnarray*}
S_{\phi} & = & \frac{\hbar\omega_{p}}{4I_{0}},\qquad S_{I}=\hbar\omega_{p}I_{0}\\
S_{x} & = & \frac{\hbar c^{2}}{16\omega_{p}I_{0}F^{2}},\qquad S_{F}=\frac{4\hbar\omega_{p}I_{0}F^{2}}{c^{2}}\\
\implies S_{x}S_{F} & = & \frac{\hbar^{2}}{4}.
\end{eqnarray*}

\end_inset

*
\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
We have that 
\begin_inset Formula 
\begin{eqnarray*}
S_{\phi} & = & \lim_{\vartheta\rightarrow0}\Delta\phi^{2}\vartheta=\lim_{\vartheta\rightarrow0}\frac{1}{4}\frac{\hbar\omega_{p}}{\mathcal{W=}I_{0}\vartheta}\vartheta\\
 & = & \frac{\hbar\omega_{p}}{4I_{0}}
\end{eqnarray*}

\end_inset

 
\end_layout

\end_inset


\end_layout

