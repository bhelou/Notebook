\begin_layout Enumerate

\emph on
Perturbative approach to Hamiltonian dynamics
\emph default
: For a general Hamiltonian in the Schrodinger picture: 
\begin_inset Formula $H_{s}=H_{0s}+V_{S}$
\end_inset

, the interaction picture evolution operator 
\begin_inset Formula $U_{I}$
\end_inset

 (
\begin_inset Formula $\hat{U}\left(-\infty,t\right)=\hat{U}_{0}\left(-\infty,t\right)\hat{U}_{I}\left(-\infty,t\right)$
\end_inset

) is given by 
\begin_inset Formula 
\begin{eqnarray*}
\hat{U}_{I}\left(-\infty,t\right) & = & \hat{I}+\frac{1}{i\hbar}\int_{-\infty}^{t}dt_{1}\hat{V}_{I}\left(t_{1}\right)+\left(\frac{1}{i\hbar}\right)^{2}\int_{-\infty}^{t}dt_{1}\int_{-\infty}^{t_{1}}dt_{2}\hat{V}_{I}\left(t_{1}\right)\hat{V}_{I}\left(t_{2}\right)+...\\
 & = & \sum_{n=0}^{\infty}\frac{1}{n!}\left(\frac{1}{i\hbar}\right)^{n}T\left\{ \left[\int_{-\infty}^{t}dt_{1}\hat{V}_{I}\left(t_{1}\right)\right]^{n}\right\} ,
\end{eqnarray*}

\end_inset

where 
\begin_inset Formula $\hat{V}_{I}\left(t\right)\equiv\hat{U}_{0}^{\dagger}\left(-\infty,t\right)\hat{V}_{S}\left(t\right)\hat{U}_{0}\left(-\infty,t\right)$
\end_inset

*
\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
NOTE: the proof is also available in 10.3.25 of 
\begin_inset CommandInset citation
LatexCommand cite
key "shankarQM"

\end_inset


\end_layout

\begin_layout Plain Layout
The interaction evolution operator has to satisfy 
\begin_inset Formula 
\begin{eqnarray*}
i\hbar\dot{U_{I}} & = & V_{I}U_{I}\\
\implies\dot{U}_{I} & = & \frac{1}{i\hbar}V_{I}U_{I}.
\end{eqnarray*}

\end_inset

First, try 
\begin_inset Formula $U_{I}=I$
\end_inset

 and improve on it by plugging it back into the above equation: 
\begin_inset Formula $\dot{U}_{I}=V_{I}/i\hbar$
\end_inset

 and so 
\begin_inset Formula 
\begin{eqnarray*}
U_{I}^{1} & = & U_{I}\left(-\infty,-\infty\right)+\int_{-\infty}^{t}V_{I}\left(s\right)ds\\
 & = & I+\int_{-\infty}^{t}V_{I}\left(s\right)ds,
\end{eqnarray*}

\end_inset

then plug this equation back into the EOM to obtain 
\begin_inset Formula 
\begin{eqnarray*}
\dot{U}_{I} & = & \frac{1}{i\hbar}V_{I}U_{I}^{1}\\
\implies U_{I} & = & I+\int_{-\infty}^{t}dt_{1}V_{I}\left(t_{1}\right)U_{I}^{1}\left(t_{1}\right)\\
 & = & I+\int_{-\infty}^{t}dt_{1}V_{I}\left(t_{1}\right)+\int_{-\infty}^{t}dt_{1}V_{I}\left(t_{1}\right)\int_{-\infty}^{t_{1}}V_{I}\left(t_{2}\right)dt_{2}
\end{eqnarray*}

\end_inset

and repeat this process indefintely.
\end_layout

\end_inset

 and so the Heisenberg evolution of an operator can be written in the following
 form
\begin_inset Formula 
\begin{eqnarray}
\hat{A}_{H}\left(t\right) & = & \hat{U}_{I}^{\dagger}\left(-\infty,t\right)\hat{A}_{H}^{\left(0\right)}\left(t\right)\hat{U}_{I}\left(-\infty,t\right)\nonumber \\
 & = & \hat{A}_{H}^{\left(0\right)}\left(t\right)+\frac{i}{\hbar}\int_{-\infty}^{t}dt_{1}\left[\hat{V}_{I}\left(t_{1}\right),\hat{A}_{H}^{\left(0\right)}\left(t\right)\right]+\left(\frac{i}{\hbar}\right)^{2}\int_{-\infty}^{t}dt_{1}\int_{-\infty}^{t_{1}}dt_{2}\left[\hat{V}_{I}\left(t_{2}\right),\left[\hat{V}_{I}\left(t_{1}\right),\hat{A}_{H}^{\left(0\right)}\left(t\right)\right]\right]+...\nonumber \\
 &  & +\left(\frac{i}{\hbar}\right)^{n}\int_{-\infty}^{t}dt_{1}\int_{-\infty}^{t_{1}}dt_{2}\ldots\int_{-\infty}^{t_{n-1}}dt_{n}\left[\hat{V}_{I}\left(t_{n}\right),\left[\ldots,\left[\hat{V}_{I}\left(t_{2}\right),\left[\hat{V}_{I}\left(t_{1}\right),\hat{A}_{H}^{\left(0\right)}\left(t\right)\right]\right]\ldots\right]\right]+...\label{eq:perturbativeApproachDynamics}
\end{eqnarray}

\end_inset

*
\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
We have that 
\family roman
\series medium
\shape up
\size normal
\emph off
\bar no
\strikeout off
\uuline off
\uwave off
\noun off
\color none

\begin_inset Formula 
\begin{eqnarray*}
\hat{A}_{H}\left(t\right) & = & \hat{U}_{I}^{\dagger}\left(-\infty,t\right)\hat{A}_{H}^{\left(0\right)}\left(t\right)\hat{U}_{I}\left(-\infty,t\right)\\
 & = & \sum_{nm=0}^{\infty}\frac{1}{n!m!}\left(-1\right)^{n}\left(\frac{1}{i\hbar}\right)^{n+m}T^{\dagger}\left\{ \left[\int_{-\infty}^{t}dt_{1}\hat{V}_{I}\left(t_{1}\right)\right]^{n}\right\} \hat{A}_{H}^{\left(0\right)}T\left\{ \left[\int_{-\infty}^{t}dt_{1}\hat{V}_{I}\left(t_{1}\right)\right]^{m}\right\} \\
 & \equiv & \sum_{nm=0}^{\infty}\frac{1}{n!m!}\left(-1\right)^{n}\left(\frac{1}{i\hbar}\right)^{n+m}T_{n}^{\dagger}\hat{A}_{H}^{\left(0\right)}T_{m}
\end{eqnarray*}

\end_inset

The lowest two order (in 
\begin_inset Formula $1/i\hbar$
\end_inset

) terms will be of the form
\begin_inset Formula 
\begin{eqnarray*}
A_{H} & = & A_{H}^{0}+\frac{1}{i\hbar}\left(\hat{A}_{H}^{0}T_{1}-T_{1}\hat{A}_{H}^{0}\right)\\
\end{eqnarray*}

\end_inset

The third order term will be of the form
\begin_inset Formula 
\begin{eqnarray*}
A_{H}^{3} & = & \left(\frac{1}{i\hbar}\right)^{2}\left(A_{H}T_{2}+T_{2}^{\dagger}A_{H}-T_{1}A_{H}T_{1}\right)\\
 & = & \left(\frac{1}{i\hbar}\right)^{2}\left(\int_{-\infty}^{t}dt_{1}\int_{-\infty}^{t_{1}}dt_{2}\left[A_{H}V_{I}\left(t_{1}\right)V_{I}\left(t_{2}\right)+V_{I}\left(t_{2}\right)V_{I}\left(t_{1}\right)A_{H}\right]-\int_{-\infty}^{t}dt_{1}\int_{-\infty}^{t}dt_{2}V_{I}\left(t_{1}\right)A_{H}V_{I}\left(t_{2}\right)\right)\\
 & =\\
 & =
\end{eqnarray*}

\end_inset


\begin_inset Formula 
\begin{eqnarray*}
\int_{-\infty}^{t}dt_{1}\int_{-\infty}^{t}dt_{2}V_{I}\left(t_{1}\right)A_{H}V_{I}\left(t_{2}\right) & = & \int_{-\infty}^{t}dt_{1}\int_{-\infty}^{t_{1}}dt_{2}V_{I}\left(t_{1}\right)A_{H}V_{I}\left(t_{2}\right)+\int_{-\infty}^{t}dt_{1}\int_{t_{1}}^{t}dt_{2}V_{I}\left(t_{1}\right)A_{H}V_{I}\left(t_{2}\right)\\
 & = & \int_{-\infty}^{t}dt_{1}\int_{-\infty}^{t_{1}}dt_{2}V_{I}\left(t_{1}\right)A_{H}V_{I}\left(t_{2}\right)+\int_{-\infty}^{t}dt_{2}\int_{t_{2}}^{t}dt_{1}V_{I}\left(t_{2}\right)A_{H}V_{I}\left(t_{1}\right)\\
 & = & \int_{-\infty}^{t}dt_{1}\int_{-\infty}^{t_{1}}dt_{2}V_{I}\left(t_{1}\right)A_{H}V_{I}\left(t_{2}\right)+\int_{-\infty}^{t}dt_{1}\int_{-\infty}^{t_{1}}dt_{2}V_{I}\left(t_{2}\right)A_{H}V_{I}\left(t_{1}\right)
\end{eqnarray*}

\end_inset

because of the following visual argument
\end_layout

\begin_layout Plain Layout

\family roman
\series medium
\shape up
\size normal
\emph off
\bar no
\strikeout off
\uuline off
\uwave off
\noun off
\color none
\begin_inset Graphics
	filename tempExplanation1.png
	scale 40

\end_inset


\end_layout

\begin_layout Plain Layout

\family roman
\series medium
\shape up
\size normal
\emph off
\bar no
\strikeout off
\uuline off
\uwave off
\noun off
\color none
and so we got what we wanted because
\begin_inset Formula 
\begin{eqnarray*}
\left[\hat{V}_{I}\left(t_{2}\right),\left[\hat{V}_{I}\left(t_{1}\right),\hat{A}_{H}^{\left(0\right)}\left(t\right)\right]\right] & = & \hat{V}_{I}\left(t_{2}\right)\hat{V}_{I}\left(t_{1}\right)A_{H}-\hat{V}_{I}\left(t_{2}\right)A_{H}\hat{V}_{I}\left(t_{1}\right)-\hat{V}_{I}\left(t_{1}\right)A_{H}\hat{V}_{I}\left(t_{2}\right)+A_{H}\hat{V}_{I}\left(t_{1}\right)\hat{V}_{I}\left(t_{2}\right)\\
\end{eqnarray*}

\end_inset


\family default
\series default
\shape default
\size default
\emph default
\bar default
\strikeout default
\uuline default
\uwave default
\noun default
\color inherit
 
\end_layout

\end_inset

 (see 
\begin_inset CommandInset citation
LatexCommand cite
key "Buonanno2002"

\end_inset

 appendix)
\end_layout

\begin_layout Enumerate
Commutator stuff:
\begin_inset Formula 
\begin{equation}
\left[AB,CD\right]=A\left[B,C\right]D+AC\left[B,D\right]+\left[A,C\right]DB+C\left[A,D\right]B.
\end{equation}

\end_inset


\end_layout

\begin_layout Subsection
Quantum Notation/Terminology
\end_layout

\begin_layout Enumerate

\emph on
Normal ordering
\emph default
: 
\begin_inset Formula $:\hat{O}:$
\end_inset

 means that the annihilation and creation operators that form 
\begin_inset Formula $\hat{O}$
\end_inset

 are normally ordered.
\end_layout

\begin_layout Enumerate

\emph on
Time ordered product
\emph default
: 
\begin_inset Formula 
\begin{eqnarray*}
T\left\{ \left[\int_{-\infty}^{t}dt_{1}\hat{O}\left(t_{1}\right)\right]^{n}\right\}  & = & n!\int_{-\infty}^{t}dt_{1}\int_{-\infty}^{t_{1}}dt_{2}...\int_{-\infty}^{t_{n-1}}dt_{n}\hat{O}\left(t_{1}\right)\hat{O}\left(t_{2}\right)...\hat{O}\left(t_{n}\right)
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Enumerate

\emph on
Symmetric expectation value
\emph default
:
\family roman
\series medium
\shape up
\size normal
\emph off
\bar no
\strikeout off
\uuline off
\uwave off
\noun off
\color none

\begin_inset Formula 
\begin{eqnarray*}
\left\langle \hat{a}_{i}\left(\Omega\right)\hat{a}_{j}\left(\Omega^{'}\right)\right\rangle _{symm} & = & \frac{1}{2}\left\langle \hat{a}_{i}\left(\Omega\right)\hat{a}_{j}\left(\Omega^{'}\right)+\hat{a}_{j}\left(\Omega'\right)\hat{a}_{i}\left(\Omega\right)\right\rangle 
\end{eqnarray*}

\end_inset


\begin_inset Formula $\left\langle \hat{a}_{i}\left(\Omega\right)\hat{a}_{j}\left(\Omega^{'}\right)\right\rangle _{symm}$
\end_inset

 is also sometimes denoted by 
\begin_inset Formula $\left\langle \hat{a}_{i}\left(\Omega\right)\circ\hat{a}_{j}\left(\Omega^{'}\right)\right\rangle $
\end_inset

.
 
\end_layout

